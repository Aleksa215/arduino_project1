#include <Servo.h>

Servo xservo;
Servo yservo;

int pos = 0;
int XServoPin = 9;
int YServoPin = 8;

int xposPin = A0;
int yposPin = A1;
int Xpos = 0;
int Ypos = 0;
int buttonPin = 7;
int buttonPress = 0;

int lazerPin = 6;

void setup() {
  pinMode(lazerPin,OUTPUT);
  pinMode(buttonPin,INPUT);
  digitalWrite(buttonPin,HIGH);
  
  xservo.attach(XServoPin);
  yservo.attach(YServoPin);
}

void loop() {
  buttonPress = digitalRead(buttonPin);
  if(buttonPress == LOW)
  {
    digitalWrite(lazerPin, HIGH);
  }
  else
  {
    digitalWrite(lazerPin, LOW);
  }

  Xpos = analogRead(xposPin);
  Xpos = map(Xpos,0,1023,0,180);
  Ypos = analogRead(yposPin);
  Ypos = map(Ypos,0,1023,0,180);
  xservo.write(Xpos);
  yservo.write(Ypos);
  delay(50);
}
